<% obj.each do |x| %>
  <div class="row">
    <div class='col-xs-8 col-xs-offset-2'>
      <div class="well well-lg">
        <div class='article-title'>
          <%= link_to x.title, article_path(x) %>
        </div>
        <div class='article-body'>
          <%= truncate(x.description, length: 50) %>
          <div class="article-meta-details">
            <small>Created by: <%= x.user.username if x.user %>,
            <%= time_ago_in_words(x.created_at) %> ago,
            last upadted: <%= time_ago_in_words(x.updated_at) %></small>
        </div>
        </div>
        <% if logged_in? && (current_user == x.user || current_user.admin?) %>
          <div class="articles-actions">
            <%= link_to "Edit this article", edit_article_path(x), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Article", article_path(x), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>